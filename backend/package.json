{
  "name": "bookstore-backend",
  "version": "1.0.0",
  "author": "playolaizq",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose stop bookstore",
    "db:verify": "docker ps",
    "db:migrate:dev": "prisma migrate dev --name init",
    "db:migrate:prod": "prisma migrate deploy",
    "db:format": "prisma format",
    "test:db:stop": "docker-compose stop bookstore-tests",
    "test:db:migrate": "env-cmd -f ./.env.test prisma migrate dev --name init",
    "test:run": "env-cmd -f ./.env.test jest --runInBand",
    "test": "npm run test:db:migrate && npm run test:run && npm run test:db:stop",
    "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier . --write",
    "build": "tsc"
  },
  "dependencies": {
    "@prisma/client": "4.16.2",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "env-cmd": "^10.1.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "http-status-codes": "^2.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "3.0.0",
    "prisma": "4.16.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
