{
  "name": "bookstore-backend",
  "version": "1.0.0",
  "author": "playolaizq",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose stop bookstore",
    "db:verify": "docker ps",
    "db:migrate": "prisma migrate dev --name init",
    "db:format": "prisma format",
    "test:db:stop": "docker-compose stop bookstore-tests",
    "test:db:migrate": "env-cmd -f ./.env.test prisma migrate dev --name init",
    "test:run": "env-cmd -f ./.env.test jest",
    "test": "npm run db:start && npm run test:db:migrate && npm run test:run && npm run test:db:stop",
    "format": "prettier . --write",
    "build": "tsc"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "dotenv": "^16.3.1",
    "env-cmd": "^10.1.0",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "3.0.0",
    "prisma": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
